<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearRowmomo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageImageOne"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="11dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/img_image1" />

        <TextView
            android:id="@+id/tvBankName"
            style="@style/txtInterbold30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="0.65"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:text="Vietcombank" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Tổng tiền" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="match_parent"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="1.400.000đ" />
    <TextView
        android:id="@+id/txtThree"
        style="@style/txtInterregular18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"

        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="______________________________________" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng nhập thông tin thẻ"
        android:layout_marginStart="10dp"
        style="@style/txtSolidRoundedOutline"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/img_image4" />

        <TextView
            android:id="@+id/tvBankName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thẻ Vietcombank"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Số thẻ" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Mã CVV (3 số cuối)" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnXacNhan"
        style="@style/btnSolidRoundedOutline_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="122dp"
        android:layout_marginBottom="23dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingTop="11dp"
        android:paddingEnd="30dp"

        android:paddingBottom="11dp"
        android:singleLine="true"
        android:text="Xác nhận"
        android:textAllCaps="false" />
</LinearLayout>
