<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChiTietFlightActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_chiTietFight"
                    android:layout_width="match_parent"
                    android:layout_height="222dp"
                    android:src="@drawable/ur2mrg23d91mex03l4mw"
                    android:scaleType="center"
                    />


                <CheckBox
                    android:id="@+id/TymButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="170dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/baseline_favorite_border_24"
                    android:checked="false"
                    android:button="@null"
                    android:layout_alignParentEnd="true">
                </CheckBox>
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="42dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="23dp"
                    android:src="@drawable/backve"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="22dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                app:cardBackgroundColor="#F9F3F3"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_location"
                            android:layout_marginRight="5dp"/>
                        <TextView
                            android:id="@+id/tv_chiTietDiemDi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đà lạttttttt"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_flighted"
                            android:layout_marginRight="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.482"
                            android:layout_marginRight="2dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="đã bay"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="37dp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                app:cardBackgroundColor="#F9F3F3"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/textview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:text="Thời gian bay"
                        android:layout_marginBottom="16dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textview2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="16dp"
                        android:text="01/01/2023- 31/12/2023"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/textview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textview1"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="16dp"

                        android:text="Thời gian mua"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textview4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textview2"
                        android:layout_alignParentEnd="true"
                        android:text="01/01/2023- 31/12/2023"
                        android:layout_marginBottom="16dp"

                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textview5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textview3"
                        android:layout_alignParentStart="true"
                        android:text="Loại vé"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textview6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textview4"
                        android:layout_alignStart="@+id/textview4"
                        android:text="Phổ thông"
                        android:textColor="@color/black" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Mô tả:"/>
                <TextView
                    android:id="@+id/tv_MoTaChiTietFight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Đây là mô tả điểm đi"/>

            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Điểm đáp:"/>
                <TextView
                    android:id="@+id/tv_DiemDapChiTiet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Đây là mô tả điểm đáp"/>

            </LinearLayout>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="100dp"
               app:cardBackgroundColor="#F9F3F3">
               <LinearLayout
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingHorizontal="20dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:textSize="25dp"
                       android:textStyle="bold"
                       android:text="1.000.000VND"
                       android:textColor="@color/black"/>
                   <Button
                       android:id="@+id/btn_datve"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Đặt vé ngay"
                       android:textAlignment="center"
                       android:textSize="18dp"
                       android:backgroundTint="@color/textColor"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>





</LinearLayout>