<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearRowmomo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageImageOne"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="11dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/img_image1" />

        <TextView
            android:id="@+id/txtMoMo"
            style="@style/txtInterbold30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="0.65"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:text="Thanh toán" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Quý khách đã đặt vé thành công! Xem thông tin chi tiết vé tại:"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="29dp"
            />
        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/img_image5" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/primaryColor"
        android:text="Lịch sử đặt vé" />

</LinearLayout>
