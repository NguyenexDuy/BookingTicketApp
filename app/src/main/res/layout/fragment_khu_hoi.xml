<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragment.KhuHoiFragment"
    android:background="@color/primaryColor"
    android:layout_gravity="center"
    android:padding="10dp">
    <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Điểm đi"
                        android:textColor="#71AFE5"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_idsanbaydiemdi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SGN"
                        android:textColor="@color/white"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/tv_tensanbaydiemdi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tp Hồ Chí Minh, VN"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Chọn ngày đi"
                        android:textColor="#71AFE5"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_CalendarNgayDiKhuHoi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_calenda"
                        android:drawablePadding="3dp"
                        android:text="17-10-2023"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Điểm đến"
                android:textColor="#71AFE5"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_idsanbaydiemden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SGN"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/tv_tensanbaydiemden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tp Hồ Chí Minh, VN"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Chọn ngày về"
                android:textColor="#71AFE5"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_CalendarNgayVeKhuHoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_calenda"
                android:drawablePadding="3dp"
                android:text="18-10-2023"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hàng khách"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#71AFE5"/>
        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="5dp"
            android:text="Người lớn"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview2"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="5dp"
            android:text="Trẻ em(2-12 tuổi)"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview3"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="5dp"
            android:text="Trẻ em dưới 2 tuổi"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="5dp"

            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_minusKhuHoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="19dp"
                android:background="@color/primaryColor"
                android:src="@drawable/button_minus" />
            <TextView
                android:id="@+id/tv_countNguoiLonKhuHoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="19dp"
                android:text="01"
                android:textColor="@color/white" />
            <ImageButton
                android:id="@+id/btn_plusKhuHoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primaryColor"
                android:src="@drawable/button_plus" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout1"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_minus2KhuHoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="19dp"
                android:background="@color/primaryColor"
                android:src="@drawable/button_minus" />
            <TextView
                android:id="@+id/tv_countTreEm2_12KhuHoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="19dp"
                android:text="00"
                android:textColor="@color/white" />
            <ImageButton
                android:id="@+id/btn_plus2KhuHoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primaryColor"
                android:src="@drawable/button_plus" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout2"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_minus3KhuHoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="19dp"
                android:background="@color/primaryColor"
                android:src="@drawable/button_minus" />
            <TextView
                android:id="@+id/tv_count3TreEm2TKhuHoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="19dp"
                android:text="00"
                android:textColor="@color/white" />
            <ImageButton
                android:id="@+id/btn_plus3KhuHoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primaryColor"
                android:src="@drawable/button_plus" />
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/btnTimKiemKhuHoi"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Tìm kiếm chuyến bay"
        android:textSize="18dp"
        android:textStyle="bold"
        android:backgroundTint="@color/textColor"
        android:layout_marginHorizontal="10dp"/>
</LinearLayout>