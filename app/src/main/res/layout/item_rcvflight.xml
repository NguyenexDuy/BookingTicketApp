<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="250dp"
    android:layout_marginRight="16dp"
    app:cardCornerRadius="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_rcvflight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banner2"
            android:scaleType="fitXY">
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_itemrcv">
        </ImageView>
        <TextView
            android:id="@+id/tv_nameflight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phú Quốc"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:lineHeight="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="207dp"/>
        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nameflight"
            android:layout_alignStart="@+id/tv_nameflight"
            android:layout_marginTop="0dp"
            android:lineHeight="18sp"
            android:text="từ "
            android:singleLine="true"
            android:textColor="@color/orange"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_priceflight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nameflight"
            android:layout_toEndOf="@+id/textview1"
            android:lineHeight="18sp"
            android:text="100.000 VNĐ"
            android:singleLine="true"
            android:textColor="@color/orange"
            android:textSize="13sp"
            android:textStyle="bold"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
